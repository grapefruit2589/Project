<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#87CEFA">

    <!-- Scrollable area for displaying AI recommendations -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Dummy text to simulate recommendations -->
            <TextView
                android:id="@+id/recommendationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 추천 여행지 및 숙박업소"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- List of recommendations (replace with dynamic content) -->
            <TextView
                android:id="@+id/recommendationItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천 여행지 1: 제주도"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/recommendationItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천 숙박업소 1: 제주 호텔 A"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/recommendationItem3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="start"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:inputType="textMultiLine"
                android:maxLines="20"
                android:scrollbars="vertical"
                android:ellipsize="end"
                android:textColor="#000000" />

        </LinearLayout>
    </ScrollView>

    <!-- Button for creating planner -->
    <Button
        android:id="@+id/createPlannerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="플래너 생성"
        android:layout_marginTop="16dp"
        android:textSize="18sp"/>

</LinearLayout>
