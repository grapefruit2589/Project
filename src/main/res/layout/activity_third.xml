<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"> <!-- 하단에 여유 공간 추가 -->

        <!-- 성별 선택 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/genderGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/maleRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남"
                android:tag="0"/>
            <RadioButton
                android:id="@+id/femaleRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="녀"
                android:tag="1"/>
        </RadioGroup>

        <!-- 나이 선택 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나이"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/ageGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/age10s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10대"
                android:tag="10"/>
            <RadioButton
                android:id="@+id/age20s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20대"
                android:tag="20"/>
            <RadioButton
                android:id="@+id/age30s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30대"
                android:tag="30"/>
        </RadioGroup>

        <!-- 여행 스타일 선택 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여행 스타일"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/styleGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/style1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자연 경관"
                    android:tag="1"/>

                <RadioButton
                    android:id="@+id/style2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도시 탐험"
                    android:tag="2"/>

                <RadioButton
                    android:id="@+id/style3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="문화 체험"
                    android:tag="3"/>

                <RadioButton
                    android:id="@+id/style4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미식 여행"
                    android:tag="4"/>

                <RadioButton
                    android:id="@+id/style5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레저 및 스포츠"
                    android:tag="5"/>

                <RadioButton
                    android:id="@+id/style6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="쇼핑"
                    android:tag="6"/>

                <RadioButton
                    android:id="@+id/style7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="힐링"
                    android:tag="7"/>
            </RadioGroup>
        </LinearLayout>


        <!-- 동반자 수 선택 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동반자 수 (본인 제외)"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/companionGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/companion0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0명"
                android:tag="0"/>
            <RadioButton
                android:id="@+id/companion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1명"
                android:tag="1"/>
            <RadioButton
                android:id="@+id/companion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2명"
                android:tag="2"/>
            <RadioButton
                android:id="@+id/companion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3명"
                android:tag="3"/>
            <RadioButton
                android:id="@+id/companion4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4명"
                android:tag="4"/>
        </RadioGroup>

        <!-- 완료 버튼 -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>